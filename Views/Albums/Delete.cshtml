@model VinylShop.Models.Album

@{
    ViewData["Title"] = "Delete Album";
}

<link rel="stylesheet" href="~/css/album.css" asp-append-version="true" />

<div class="container">
    <h1>Delete Album</h1>

    <p class="text-danger"><strong>Are you sure you want to delete this album?</strong></p>

    <div class="form-group">
        <label>Title:</label>
        <p>@Model.Title</p>
    </div>

    <div class="form-group">
        <label>Artist:</label>
        <p>@Model.Artist.Name</p>
    </div>

    <div class="form-group">
        <label>Genre:</label>
        <p>@Model.Genre.Name</p>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <button type="submit" class="btn btn-delete">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
