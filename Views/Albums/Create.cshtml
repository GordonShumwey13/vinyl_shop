@model VinylShop.Models.Album

@{
    ViewData["Title"] = "Create Album";
}

<link rel="stylesheet" href="~/css/album.css" asp-append-version="true" />

<div class="container">
    <h1>Create Album</h1>

    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title">Album Title</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label for="ArtistName">Artist Name</label>
            <input type="text" name="ArtistName" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="GenreId">Genre</label>
            <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genres"></select>
        </div>

        <div class="form-group">
            <label for="ImageFile">Upload Image</label>
            <input type="file" name="ImageFile" class="form-control" required />
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Action("Index", "Albums")" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
