@model VinylShop.Models.Artist

@{
    ViewData["Title"] = "Edit Artist";
}

<link rel="stylesheet" href="~/css/album.css" asp-append-version="true" />

<h1>Edit Artist</h1>

<form asp-action="EditArtist" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImagePath" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Biography"></label>
        <textarea asp-for="Biography" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Biography" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Upload New Image (optional)</label>
        <input type="file" name="imageFile" class="form-control"/>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <div class="form-group">
            <img src="@Model.ImagePath" alt="@Model.Name" style="max-width: 200px; margin-top: 10px;"/>
        </div>
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
