@model List<VinylShop.Models.UserAdmin>

@{
    ViewData["Title"] = "Users";
}

<link rel="stylesheet" href="~/css/album.css" asp-append-version="true" />

<h1>Users</h1>

<a class="btn btn-primary" asp-action="Create">Add New User</a>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles.Select(r => r.RoleName.ToString()))</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-delete" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="details">
    <a asp-controller="Albums" asp-action="Index" class="btn btn-secondary">Back to Albums</a>
</div>
