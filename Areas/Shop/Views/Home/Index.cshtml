@model IEnumerable<VinylShop.Models.Album>

<div class="album-grid">
    @foreach (var album in Model)
    {
        <div class="album-card">
            <img src="@album.ImagePath" alt="@album.Title" />
            <div class="album-info">
                <h3>@album.Title</h3>
                <p>Artist: @album.Artist.Name</p>
                <p>Genre: @album.Genre.Name</p>
                <a class="buy-button" asp-controller="Albums" asp-action="Details" asp-route-id="@album.Id">View Album</a>
            </div>
        </div>
    }
</div>
