    <form method="post" class="checkout-form">
        <input type="hidden" name="CartJson" id="CartJsonInput" />

        @if (!User.Identity.IsAuthenticated)
        {
            <input type="text" name="FullName" placeholder="–ü–Ü–ë" required />
