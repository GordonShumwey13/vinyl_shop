@page
@model VinylShop.Areas.Shop.Pages.Account.ProfileModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href="~/css/profile.css" />

@await Html.PartialAsync("_Banner", (string)null)

@if (TempData["SuccessMessage"] != null)
{
    <div id="popup-message" class="popup-message">
        @TempData["SuccessMessage"]
    </div>
    <script>
        setTimeout(() => {
            const popup = document.getElementById('popup-message');
            if (popup) {
                popup.style.opacity = '0';
                setTimeout(() => popup.remove(), 500);
            }
        }, 3000);
    </script>
}

<div class="profile-wrapper">

    @await Html.PartialAsync("_UserInfoBar")

    <!-- Main Content -->
    <section class="profile-content">

        <div class="account-summary">
            <h2>Мій обліковий запис</h2>
            <p>
                В особистому кабінеті ви можете переглядати історію замовлень, змінювати контактні дані та іншу
                інформацію.
            </p>
        </div>

        <div class="profile-main-info">
            <h3>Основна інформація</h3>
            <div class="info-table">
                <div class="info-header">
                    <div>Ім’я</div>
                    <div>Пошта</div>
                    <div>Дії</div>
                </div>
                <div class="info-row">
                    <div>@Model.FirstName</div>
                    <div>@Model.UserEmail</div>
                    <div><a href="/Shop/Account/ProfileEdit" class="edit-link">Змінити</a></div>
                </div>
            </div>
        </div>

        <div class="profile-main-info"></div>
        <h3>Історія замовлень</h3>
        <div class="info-table">
            <div class="info-header">
                <div>№ замовлення</div>
                <div>Статус</div>
                <div>Дата замовлення</div>
                <div>Сума</div>
            </div>
            @if (Model.Orders.Any())
            {
                @foreach (var order in Model.Orders)
                {
                    <a href="/Shop/Account/History" class="info-row-link">
                        <div class="info-row">
                            <div class="order-number">@order.Id</div>
                            <div>
                                @switch (order.Status)
                                {
                                    case VinylShop.Models.Enums.OrderStatus.Очікування:
                                        <span class="status-badge status-pending">Очікування</span>
                                        break;
                                    case VinylShop.Models.Enums.OrderStatus.Успішний:
                                        <span class="status-badge status-success">Успішний</span>
                                        break;
                                    case VinylShop.Models.Enums.OrderStatus.Відхилений:
                                        <span class="status-badge status-cancelled">Відхилений</span>
                                        break;
                                    default:
                                        <span class="status-badge">@order.Status.ToString()</span>
                                        break;
                                }
                            </div>
                            <div>@order.OrderDate.ToLocalTime().ToString("dd.MM.yyyy")</div>
                            <div>@order.TotalPrice.ToString("0.00") грн</div>
                        </div>
                    </a>
                }
            }
            else
            {
                <div class="info-row">
                    <div></div>
                    <div class="no-orders" style="flex: 2; text-align: center;">У вас поки немає замовлень.</div>
                    <div></div>
                    <div></div>
                </div>
            }

        </div>
    </section>
</div>
