@page
@model VinylShop.Areas.Shop.Pages.Account.ProfileModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href="~/css/profile.css"/>

@await Html.PartialAsync("_Banner", (string)null)

<div class="profile-container">
    <h2 class="profile-title">Профіль користувача</h2>

    <div class="profile-info">
        <p><strong>Email:</strong> @Model.UserEmail</p>
    </div>

    <div class="profile-actions">
        <a href="/Shop/Account/ProfileEdit" class="btn btn-success">Змінити профіль</a>

        <form method="post" asp-page-handler="Logout" style="display:inline-block; margin-left:10px;">
            <button type="submit" class="btn btn-danger">Вийти з акаунту</button>
        </form>
    </div>
</div>
